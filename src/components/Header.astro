---
import { Image } from "astro:assets";
import MapofBangladesh from "../assets/Map.png";
---

<header>
  <div class="first-box"><a href="/"> <p>For <br /> Hire</p></a></div>
  <div class="second-box">
    <div><p>MM</p></div>
    <div><h1>Portfolio</h1></div>
    <div><p>XX</p></div>
  </div>
  <div class="third-box">
    <div class="third-box-img">
      <Image
        width={50}
        height={65}
        src={MapofBangladesh}
        alt="Map of Bangladesh"
      />
    </div>
    <div class="third-box-txt">
      <p>Bangladesh</p>
      <h1>Dhaka</h1>
    </div>
  </div>
</header>

<style lang="scss">
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100px;
    border-bottom: 2px solid #000;

    .first-box {
      width: 100px;
      height: 100px;
      background: var(--color-primary);
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.6s ease;

      a {
        color: #fff;
      }

      p {
        font-family: var(--header-font);
        font-size: 2.5rem;
        font-weight: bold;
        text-transform: uppercase;
        line-height: 20px;
        transform: rotate(-45deg);
      }
    }
    .first-box:hover {
      background: var(--color-hover);
    }

    .second-box {
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      color: #000;
      font-family: var(--header-font);

      h1 {
        margin: 0 100px;
        font-size: 3rem;
        text-transform: uppercase;
      }
    }

    .third-box {
      width: 100px;
      height: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      color: #000;
      border-left: 2px solid #000;

      .third-box-txt {
        position: relative;

        p {
          position: absolute;
          font-size: 0.3rem;
          margin-left: 50px;
        }

        h1 {
          font-weight: bolder;
          font-size: 1.5rem;
        }
      }
    }

    @media (max-width: 960px) {
      .second-box {
        h1 {
          margin: 0 30px;
        }
      }
    }

    @media (max-width: 500px) {
      .second-box {
        h1 {
          margin: 0 20px;
        }
        p {
          font-size: 0.7rem;
        }
      }
    }
  }
</style>
