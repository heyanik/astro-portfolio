---
import Layout from "../layouts/Layout.astro";

const posts = await Astro.glob("../posts/projects/*.md");
---

<Layout title="Projects">
  <div class="project-container">
    {
      posts.map((post) => (
        <div class="project-box">
          <div class="project-img">
            <img src={post.frontmatter.imagePath} loading="lazy" />
          </div>
          <div class="project-cnt">
            <div class="plateform">
              <img src={post.frontmatter.plateformImg} loading="lazy" />
            </div>

            <div class="project-ti-dis">
              <h1>{post.frontmatter.title}</h1>
              <p>{post.frontmatter.description}</p>
            </div>
            <a href={post.frontmatter.link} target="_blank">
              View
            </a>
          </div>
        </div>
      ))
    }
  </div>
</Layout>

<style lang="scss">
  .project-container {
    width: 900px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: 1fr;
    grid-column-gap: 10px;
    grid-row-gap: 10px;
    margin: 0 auto;
    padding: 10px;

    .project-box {
      margin-top: 20px;
      height: 300px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-direction: column;
      border: 2px solid #000;
      line-height: 10px;

      .project-img {
        width: 100%;
        height: 220px;
        display: flex;
        justify-content: center;

        img {
          width: 100%;
        }
      }

      .project-cnt {
        width: 100%;
        height: 100px;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-top: 2px solid #000;

        .plateform {
          width: 80px;
          height: 74px;
          background-color: var(--color-primary);
          display: flex;
          justify-content: center;
          align-items: center;
          transition: all 0.5s ease;

          img {
            width: 30px;
            height: 30px;
          }
        }
        .project-ti-dis {
          h1 {
            margin-top: 15px;
          }
          p {
            opacity: 0.8;
          }
        }
      }

      a {
        width: 100px;
        height: 74px;
        background-color: var(--color-primary);
        color: #fff;
        font-size: large;
        font-weight: bold;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.5s ease;
      }

      a:hover {
        background: var(--color-hover);
      }
    }
  }

  @media (max-width: 960px) {
    .project-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
      grid-column-gap: 30px;
      grid-row-gap: 10px;
      margin: 0 auto;
      padding: 10px;
    }
  }
  @media (max-width: 800px) {
    .project-container {
      width: 100%;
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
      grid-column-gap: 30px;
      grid-row-gap: 10px;
      margin: 0 auto;
      padding: 10px;
    }
  }
  @media (max-width: 600px) {
    .project-container {
      width: 100%;
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
      grid-column-gap: 30px;
      grid-row-gap: 10px;
      margin: 0 auto;
      padding: 10px;
    }
  }
  @media (max-width: 500px) {
    .project-container {
      width: 100%;
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 1fr;
      grid-column-gap: 30px;
      grid-row-gap: 10px;
      margin: 0 auto;
      padding: 10px;
    }
  }
</style>
