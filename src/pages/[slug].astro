---
import Layout from "../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await Astro.glob("../posts/*.md");

  return posts.map((post) => ({
    params: {
      slug: post.frontmatter.slug,
    },
    props: {
      post,
    },
  }));
}

const { Content, frontmatter } = Astro.props.post;
---

<Layout title={frontmatter.title}>
  <section class="page-content prose-lg">
    <div class="container">
      <div class="head-content">
        <h2>{frontmatter.title}</h2>
        <a href="javascript:history.back()">Go <br />Back</a>
      </div>
      <Content />
    </div>
  </section>
</Layout>

<style lang="scss">
  .page-content {
    margin-top: 20px;
    display: flex;
    align-items: center;
    justify-content: center;

    .container {
      width: 700px;
      height: 70px;
      padding: 10px;

      .head-content {
        width: 100%;
        height: 70px;
        border: 2px solid #000;
        display: flex;
        align-items: center;
        justify-content: space-between;

        h2 {
          font-size: 2.5rem;
          font-weight: bold;
        }

        a {
          width: 100px;
          height: 70px;
          background: var(--color-primary);
          color: #fff;
          display: flex;
          align-items: center;
          justify-content: center;
          line-height: 20px;
          font-weight: bold;
          border-right: none;
          transition: all 0.5s ease;
        }

        a:hover {
          background: var(--color-hover);
        }
      }
      @media (max-width: 960px) {
        .head-content {
          h2 {
            font-size: 2rem;
            font-weight: bold;
          }
        }
      }
      @media (max-width: 500px) {
        .head-content {
          h2 {
            font-size: 1.5rem;
            font-weight: bold;
          }
        }
      }
    }
  }
</style>
