---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import AboutImage from "../assets/Frame.png";
---

<Layout title="Blog">
  <div class="about-img-container">
    <Image class="about-img" src={AboutImage} alt="about-image" />
  </div>
</Layout>

<style lang="scss">
  .about-img-container {
    object-fit: fill;
    .about-img {
      width: 100%;
    }

    @media (max-width: 1280px) {
      .about-img {
        width: 100%;
      }
    }
  }
</style>
